{
  "info": {
    "name": "MyCRUD API",
    "_postman_id": "mycrud-collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "GET Products List",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{baseUrl}}/products"
      }
    },
    {
      "name": "POST Create Product",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Laptop\",\n  \"price\": 1500,\n  \"tags\": [\"electronics\"]\n}"
        },
        "url": "{{baseUrl}}/products"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var jsonData = pm.response.json();",
              "pm.environment.set(\"productId\", jsonData.id);"
            ]
          }
        }
      ]
    },
    {
      "name": "GET Product by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{baseUrl}}/products/{{productId}}"
      }
    },
    {
      "name": "PUT Update Product",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Laptop Pro\",\n  \"price\": 2000,\n  \"tags\": [\"electronics\", \"pro\"]\n}"
        },
        "url": "{{baseUrl}}/products/{{productId}}"
      }
    },
    {
      "name": "DELETE Product",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": "{{baseUrl}}/products/{{productId}}"
      }
    },
    {
      "name": "GET After Delete (404)",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{baseUrl}}/products/{{productId}}"
      }
    }
  ]
}
